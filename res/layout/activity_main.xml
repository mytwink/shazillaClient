<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wall"
    android:orientation="vertical" >

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/progress"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/progress"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/progressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="@string/waiting"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressTv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:textSize="20sp"
        android:text="@string/press" />

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/Instrument0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:src="@drawable/instrument0" />

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/Instrument1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView1"
        android:visibility="invisible"
        android:src="@drawable/instrument1" />

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/Instrument2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:src="@drawable/instrument2" />

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/Instrument3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/progress"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:src="@drawable/instrument3" />

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/Instrument5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/progress"
        android:layout_marginRight="27dp"
        android:visibility="invisible"
        android:src="@drawable/instrument5" />

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:src="@drawable/background" />

    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:src="@drawable/background" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Instrument1"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="" />

</RelativeLayout>